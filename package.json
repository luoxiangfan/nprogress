{
  "name": "nprogress-es",
  "version": "1.5.0",
  "license": "MIT",
  "description": "nprogress rewrite with typescript",
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+git@github.com:luoxiangfan/nprogress.git"
  },
  "keywords": [
    "nprogress",
    "nprogress-es",
    "nprogress es",
    "typescript",
    "javascript",
    "js",
    "ts",
    "esm",
    "ESModule"
  ],
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./nprogress.css": "./nprogress.css",
    "./dist/nprogress.css": "./nprogress.css"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "nprogress.css"
  ],
  "scripts": {
    "lint": "eslint . --fix",
    "type-check": "tsc --strict --noEmit",
    "format": "prettier --write src/ scripts/",
    "clean": "node-rmrf dist",
    "copy-css": "node scripts/copy-css.ts ./src/nprogress.css ./nprogress.css --modify",
    "build-rollup": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "build": "npm run clean && npm run build-rollup && npm run copy-css",
    "release": "npm run format && npm run build && npm publish"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/clean-css": "^4.2.11",
    "@types/node": "^24.3.1",
    "clean-css": "^5.3.3",
    "eslint": "^9.35.0",
    "node-rmrf": "^1.2.1",
    "prettier": "^3.6.2",
    "rollup": "^4.50.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  }
}
